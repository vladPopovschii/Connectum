<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed</title>
    <link rel="stylesheet" href="/styles/styles.css">
    <script
		src="https://code.jquery.com/jquery-3.5.1.js"
		integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
		crossorigin="anonymous"></script>
    <script type=”text/javascript” src=”/socket.io/socket.io.js”></script>
    <script defer src="/scripts/sendRequest.js"></script>
</head>
<body>
    <%- include ('../partials/_header.ejs') %> 
    <%- include ('../partials/_side-navs.ejs') %> 
    <div class="container-content">
        <% if (users.length > 0) { %>
            <% if (searchField == '') { %>
                <h2 class="page-header">All people</h2>
            <% } else { %>
                <h2 class="page-header">Results for "<%= searchField %>"</h2>
            <% } %>
            <div class="friends-container">
                <% users.forEach(user => { %>
                    <div class="friend-container">
                        <div class="friend-container-img"><img src="<%= user.profileImage %>" alt=""></div>
                        <div class="friend-container-info">
                            <div class="friend-container-name"><%= user.firstName %>  <%= user.lastName %></div>
                            <div class="friend-container-data">3 common friends</div>
                        </div>
                        <form class="send-friend-request" action="" method="GET" data-send-friend-request-form>
                            <input type="hidden" name="receiverId" value="<%= user.id %>" data-friend-receiver>
                            <input type="hidden" name="senderId" value="<%= thisUser.id %>" data-friend-sender>
                            <button class="form-submit btn-add-friend" data-send-friend-request-button>Add</button>
                        </form>
                    </div>
                <% }) %>
            </div>
        <% }  else { %> 
            <h2 class="page-header">No results for "<%= searchField %> "</h2>
        <% } %>
    </div>
</body>
</html>